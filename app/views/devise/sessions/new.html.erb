
<div class="container">

<div class="row justify-content-center">
<div class="col-md-6">
<div class="card">
<header class="card-header">
  <%= link_to 'Sign Up', new_user_registration_path, class: "float-right btn btn-outline-primary mt-1" %>
	<h4 class="card-title mt-2">Log In</h4>
</header>
<article class="card-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-row">
		<div class="col form-group">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true, class: "form-control" %>
		</div> <!-- form-group end.// -->
	</div> <!-- form-row end.// -->
	<div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
	</div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-group">
      <%= link_to 'Forgot your password?', new_user_password_path %>
    </div>

    <div class="actions">
          <%= f.submit "Log In",class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->
    <% end %>

</article> <!-- card-body end .// -->
<div class="border-top card-body text-center">New here? <%= link_to 'Join Us', new_user_registration_path %></div>
</div> <!-- card.// -->
</div> <!-- col.//-->

</div> <!-- row.//-->

</div>
