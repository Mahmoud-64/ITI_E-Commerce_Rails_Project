

<div class="container">

<div class="row justify-content-center">
<div class="col-md-6">
<div class="card">
<header class="card-header">
  <%= link_to 'Log In', new_user_session_path, class: "float-right btn btn-outline-primary mt-1" %>
	<h4 class="card-title mt-2">Sign up</h4>
</header>
<article class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
	<div class="form-row">
		<div class="col form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
		</div> <!-- form-group end.// -->
	</div> <!-- form-row end.// -->
	<div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
		<small class="form-text text-muted">We'll never share your email with anyone else.</small>
	</div>
	<div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </small>
	</div> <!-- form-group end.// -->
	<div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
	</div> <!-- form-group end.// -->
  <div class="form-group">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar, class: "form-control" %>
  </div>
    <div class="actions">
          <%= f.submit "Sign up",class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->
    <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <br> Terms of use and Privacy Policy.</small>

    <% end %>

</article> <!-- card-body end .// -->
<div class="border-top card-body text-center">Have an account?   <%= link_to 'Log In', new_user_session_path %></div>
</div> <!-- card.// -->
</div> <!-- col.//-->

</div> <!-- row.//-->

</div>
